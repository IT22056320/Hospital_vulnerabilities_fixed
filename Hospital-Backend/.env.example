PORT=3000
MONGO_URI=mongodb://localhost:27017/hospital_db

# JWT for signing local tokens (fallback exists but set your own)
JWT_SECRET=replace-with-a-long-random-secret

# Frontend origin for CORS and redirects
FRONTEND_ORIGIN=http://localhost:5173

# OIDC / OAuth2 configuration
# Use your provider's issuer URL (e.g., https://accounts.google.com, or your Auth provider)
OIDC_ISSUER=https://example-issuer.com
OIDC_CLIENT_ID=your-client-id
# Optional client secret for confidential clients; leave empty for public clients using PKCE only
OIDC_CLIENT_SECRET=
# Must match the route served by the frontend and registered with your provider
OIDC_REDIRECT_URI=http://localhost:3000/api/v1/auth/oauth/callback
# Optional scopes
OIDC_SCOPE=openid profile email
